{
  "name": "@xsolare/trip-scheduler-server",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "bun": ">=1.1.30"
  },
  "scripts": {
    "--------------------------------<      DEV       >--------------------------------": "",
    "dev": "bun run --hot --watch src/server.ts",
    "dev:debug": "bun --inspect run --hot --watch src/server.ts",
    "--------------------------------<      BUILD     >--------------------------------": "",
    "build": "bunx --bun tsup --config build/build-server.ts",
    "start": "bun --bun run dist/index.js",
    "--------------------------------<   DATABASE    >---------------------------------": "",
    "db:migrate": "bun run db/migrate.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:dump": "bun run db/dump.ts",
    "db:seed": "bun run db/seed.ts",
    "db:studio": "bunx drizzle-kit studio",
    "db:reset": "bunx drizzle-kit drop && bun run db:generate && bun run db:seed",
    "--------------------------------< LINT & FORMAT >---------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "^11.4.4",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.0",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@antfu/eslint-config": "5.2.1",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "bun": "^1.2.20",
    "bun-types": "^1.2.20",
    "eslint": "9.33.0",
    "eslint-plugin-format": "1.0.1",
    "tsup": "^8.5.0",
    "typescript": "5.9.2"
  }
}

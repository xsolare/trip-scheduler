{
  "name": "@xsolare/trip-scheduler-server",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "bun": ">=1.1.30"
  },
  "scripts": {
    "start": "bun --bun run dist/index.js",
    "--------------------------------<      DEV       >--------------------------------": "",
    "dev": "bun run --hot --watch src/server.ts",
    "dev:debug": "bun --inspect run --hot --watch src/server.ts",
    "--------------------------------<      BUILD     >--------------------------------": "",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "--------------------------------<   DATABASE    >---------------------------------": "",
    "db:migrate": "bun run db/migrate.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:dump": "bun run db/dump.ts",
    "db:seed": "bun run db/seed.ts",
    "db:seed-json": "bun run db/seed-json.ts",
    "db:studio": "bunx drizzle-kit studio",
    "db:reset": "bunx drizzle-kit drop && bun run db:generate",
    "--------------------------------< LINT & FORMAT >---------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "^11.5.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "exif-reader": "^2.0.2",
    "exifr": "^7.1.3",
    "exifreader": "^4.31.1",
    "exiftool-vendored": "^30.3.0",
    "hono": "^4.9.2",
    "pg": "^8.16.3",
    "sharp": "^0.34.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@antfu/eslint-config": "5.2.1",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "bun": "^1.2.20",
    "bun-types": "^1.2.20",
    "eslint": "9.33.0",
    "eslint-plugin-format": "1.0.1",
    "typescript": "5.9.2"
  }
}

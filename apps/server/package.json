{
  "name": "@xsolare/trip-scheduler-server",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "bun": ">=1.1.30"
  },
  "scripts": {
    "start": "bun --bun run dist/index.js",
    "--------------------------------<      DEV       >--------------------------------": "",
    "dev": "bun run --hot --watch src/server.ts",
    "dev:debug": "bun --inspect run --hot --watch src/server.ts",
    "--------------------------------<      BUILD     >--------------------------------": "",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --no-minify",
    "--------------------------------<   DATABASE    >---------------------------------": "",
    "db:migrate": "bun run db/migrate.ts",
    "db:generate": "bunx drizzle-kit generate",
    "db:dump": "bun run db/dump.ts",
    "db:check": "bun run db/check-data.ts",
    "db:seed": "bun run db/seed.ts",
    "db:seed-json": "bun run db/seed-json.ts",
    "db:studio": "bunx drizzle-kit studio",
    "db:reset": "bunx drizzle-kit drop",
    "--------------------------------< LINT & FORMAT >---------------------------------": "",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@hono/trpc-server": "^0.4.0",
    "@trpc/server": "^11.6.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "exifr": "^7.1.3",
    "hono": "^4.9.9",
    "pg": "^8.16.3",
    "resend": "^6.1.2",
    "sharp": "^0.34.4",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "5.4.1",
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^11.0.0",
    "bun": "^1.2.23",
    "bun-types": "^1.2.23",
    "eslint": "9.36.0",
    "eslint-plugin-format": "1.0.2",
    "typescript": "5.9.3"
  }
}
